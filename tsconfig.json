{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",         // Specify the output folder for all emitted files.
    "rootDir": "./src"           // Specify the root folder within your source files.
  },
  "include": ["src/**/*"],       // Specify the include paths relative to the project root
  "exclude": ["node_modules", "build"]  // Specify the paths to exclude from the compilation
}
